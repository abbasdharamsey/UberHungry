            <div class="page-header">
                <div class="row">
                    <h1 style="text-align:center">You don't seem to have any User Information</h1>
                </div>
                <div class="row">
                    <div class="col-xs-3 col-md-3"></div>
                    <div class="col-xs-4 col-md-6">
                        <h3><a href="#" data-toggle="modal" data-target="#edit-modal"><span class="label label-info">Add your information</span></a></h3>
                    </div>
                    <div class="col-xs-3 col-md-3"></div>
                </div>
            </div>

        {{/unless}}

        
        {{#if restaurantInfo}}
        <h3 style="text-align:center">Events you're attending</h3>
        {{#each restaurantInfo}}
        
        <div class="container">
            <div class="row" style="margin-top: 10px">
                <div class="col-xs-2 col-sm-3"></div>
                <div class="col-xs-8 col-sm-6">
                     <ul class="list-group">
                      <li class="list-group-item"><h5>Restaurant: <span class="text-right">{{restaurant}}</span> </h5></li>
                      <li class="list-group-item">When you're leaving: {{time_l}}</li>
                      <li class="list-group-item">When you're coming back: {{time_r}} </li>
                      <li class="list-group-item">Event creator: {{leader}}</li>
                      <li class="list-group-item">Event contact: {{leader_phone}}</li>
                    </ul>
                </div>
                <div class="col-xs-2 col-sm-3"></div>
            </div>
            <div class="row">
                <div class="col-xs-3 col-sm-5"></div>
                <div class="col-xs-6 col-sm-2">
                    <button type="submit" class="btn btn-primary delete-important-data">Don't want to go anymore?</button>
                    <a href="/deque/{{id}}" type="submit" style="display:none;" class="delete-data-conf btn btn-primary">Sure?</a>
                </div>
                <div class="col-xs-3 col-sm-5"></div> 
            </div>
        </div>
        {{/each}} 
        {{/if}}
